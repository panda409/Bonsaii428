@*请注意这里不要像Index那样使用IEnumerable<Bonsaii.Models.DepartmentViewModel>*@
@model Bonsaii.Models.BillPropertyModels

@{
    ViewBag.Title = "单据详情";
}

<script src="~/Scripts/UI/lib/jquery/jquery.min.js"></script>
<div class="content">
    <!-- 主内容开始 -->
    <div class="control-bar card bor-b">
        <ul class="breadcrumb pull-left pv">
            <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
            <li><a href="#">设置单据性质</a></li>
            <li><a href="#">@ViewBag.Title</a></li>
        </ul>
        <div class="h-list pull-right pv">
            <a href="/BillPropertyModels/Edit/@Model.Id"><i class="fa fa-edit"></i>编辑</a>
            <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
            <a href="/BillPropertyModels/Index"><i class="fa fa-backward"></i>返回</a>

        </div>
    </div>
</div>
<div class="card panel-box">
    <h4 class="title">@ViewBag.Title</h4>

    <div>


        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TypeName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TypeName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TypeFullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TypeFullName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CodeMethod)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CodeMethod)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IsAutoAudit)
            </dt>
            <dd>
                @{
                    string str = "";
                    if (Model.IsAutoAudit == 1)
                    {
                        str = "自动审核";
                    }
                    else if (Model.IsAutoAudit == 2)
                    {
                        str = "手动审核";
                    }
                    else
                    {
                        str = "走审批流";
                    }
                }
                @str       
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IsLimitInput)
            </dt>
            <dd>
                @if (Model.IsLimitInput)
                {
                    <input type="checkbox" id="LimitInput" disabled="disabled" checked="checked"><label for="LimitInput"></label>
                }
                else
                {
                    <input type="checkbox" id="LimitInput" disabled="disabled"><label for="LimitInput"></label>

                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IsAscOrDesc)
            </dt>
            <dd>
                @if (Model.IsAscOrDesc)
                {
                    <input type="checkbox" id="Asc" disabled="disabled" checked="checked"><label for="Asc"></label>
                }
                else
                {
                    <input type="checkbox" id="Asc" disabled="disabled"><label for="Asc"></label>

                }
            </dd>
            <dt>


            </dt>

            <dd>
                <a href="/BillPropertyModels/Edit/@Model.Id"><input type="submit" value="编辑" class="btn btn-primary" /></a> <button type="button" class="btn btn-outline" onclick="tz()">取消</button>
            </dd>
        </dl>
    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    })
    function tz() {
        window.location.href = "/BillPropertyModels/Index";
    }
</script>
