@model IEnumerable<Bonsaii.Models.BillPropertyModels>
@{
    ViewBag.Title = "设置单据性质";
    
}

<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">系统设置</a></li>
        <li><a href="/BillPropertyModels/Index">设置单据属性</a></li>
    </ul>
    <div class="h-list pull-right pv">
        <a href="/BillPropertyModels/Create"><i class="fa fa-plus"></i>新增</a>
        <a href="#"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>
    </div>
</div>



<div class="card p ">

    <div class="main-table mt">

        <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
            <thead>
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="t1"><label for="t1"></label>
                    </th>
                    <th class="sorting_disabled">
                        序号
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodeMethod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAutoAudit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsLimitInput)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAscOrDesc)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>

            @{
                int index = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;
                    <tr>

                        <td class="checkbox-wrap"><input type="checkbox" id="item_@index"><label for="item_@index"></label></td>

                        <td>
                            @index
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodeMethod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>

                        @*<td>
                            @Html.DisplayFor(modelItem => item.IsApprove)
                        </td>*@
                        <td class="checkbox-wrap">
                            @{
                    string str = "";
                    if (item.IsAutoAudit == 1)
                    {
                        str = "自动审核";
                    }
                    else if (item.IsAutoAudit == 2)
                    {
                        str = "手动审核";
                    }
                    else
                    {
                        str = "走审批流";
                    }
                            }
                            @str
                        </td>
                        <td class="checkbox-wrap">
                            @if (item.IsLimitInput)
                            {
                                <input type="checkbox" id="LimitInput_@index" disabled="disabled" checked="checked"><label for="LimitInput_@index"></label>
                            }
                            else
                            {
                                <input type="checkbox" id="LimitInput_@index" disabled="disabled"><label for="LimitInput_@index"></label>

                            }
                        </td>
                        <td class="checkbox-wrap">
                            @if (item.IsAscOrDesc)
                            {
                                <input type="checkbox" id="Asc_@index" disabled="disabled" checked="checked"><label for="Asc_@index"></label>
                            }
                            else
                            {
                                <input type="checkbox" id="Asc_@index" disabled="disabled"><label for="Asc_@index"></label>

                            }
                        </td>
                        <td>
                            <a href="/BillPropertyModels/Details?id=@item.Id" class="icon fa fa-search bgc-blue-500" title="详情"></a>
                            <a href="/BillPropertyModels/Edit?id=@item.Id" class="icon fa fa-edit bgc-blue-500" title="编辑"></a>
                            <a href="/BillPropertyModels/Delete?id=@item.Id" class="icon fa fa-trash bgc-red-500" title="删除"></a>
                        </td>
                    </tr>
                }
                @{
                    int num = Model.Count();

                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $("#add").click(function () {
        window.location.href = "/BillPropertyModels/Create"
    });

    $("#refresh").click(function () {
        window.location.reload();
    });

    $("#rootcheckbox").change(
        function () {
            if ($('#rootcheckbox').is(":checked")) {
                $('.brancheckbox').prop('checked', true);
            }

            else
                // $('.brancheckbox').attr("checked",false);//
                $('.brancheckbox').removeAttr("checked");
        }
        );

    $(".Id").click(function () {
        attr("yes");

    }
    );


</script>


