
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterSuccess</title>
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
</head>
<body>
    <div> 
           <h3 style="text-align:center">注册成功！</h3>
        <p style="text-align:center">
            <span id="second" style="color:#ff0000">5</span>秒后自动跳转到登录界面
        </p>
        <p style="text-align:center">
            <a href="/Account/Login">点此手动到登录界面</a>
        </p>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        var seconds = 5;
        var countDown =  setInterval(myInterval, 1000);
        function myInterval() {
            seconds--;
            $("#second").text(seconds);
            if (seconds == 0) {
                window.location.href = "/Account/Login";
                clearInterval(countDown);
            }
        }
    });
</script>
