@model IEnumerable<Bonsaii.Models.Audit.AuditTemplate>

@{
    
    ViewBag.Title = "签核单据配置";
}
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">电子签核</a></li>
        <li><a href="/AuditTemplate/Index">@ViewBag.Title</a></li>
    </ul>
    <div class="h-list pull-right pv">
        <a href="/AuditTemplate/Create"><i class="fa fa-plus"></i>新增</a>
        <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>
    </div>
</div>
<div class="card p ">
    <div class="main-table mt">
        <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
            <thead>
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="t1"><label for="t1"></label>
                    </th>
                    <th>
                        序号
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BType)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpireTime)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            @{
                int index = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;
                    <tr>
                        <td class="checkbox-wrap"><input type="checkbox" id="item_@index"><label for="item_@index"></label></td>
                        <td>
                            @index
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator)
                        </td>
                        <td>
                            @{
                    if (item.StartTime != null)
                    {
                        var startCut = item.StartTime.ToString().Substring(0, 9);
                        @Html.DisplayFor(modelItem => startCut)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.StartTime)
                    }
                            }
                        </td>
                        <td>
                            @{
                    if (item.ExpireTime != null)
                    {
                        var startCut = item.ExpireTime.ToString().Substring(0, 9);
                        @Html.DisplayFor(modelItem => startCut)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ExpireTime)
                    }
                            }

                        </td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                            @Html.ActionLink("审批节点列表", "AuditStepIndex", new { id = item.Id })
                        </td>*@
                        <td>
                            <a href="/AuditTemplate/AuditStepIndex/@item.Id" title="审批节点列表" class="icon fa fa-cog bgc-blue-500"></a>
                            <a href="/AuditTemplate/Details/@item.Id" title="详情" class="icon fa fa-search bgc-blue-500"></a>
                            <a href="/AuditTemplate/Edit/@item.Id" title="编辑" class="icon fa fa-edit bgc-blue-500"></a>
                            <a href="/AuditTemplate/Delete/@item.Id" title="删除" class="icon fa fa-trash bgc-red-500"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    });
</script>
