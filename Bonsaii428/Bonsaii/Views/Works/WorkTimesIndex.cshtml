@model IEnumerable<Bonsaii.Models.Works.WorkTimes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="/Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">考勤管理</a></li>
        <li><a href="/Works/WorkTimesIndex">班次管理</a></li>
    </ul>
    <div class="h-list pull-right pv">
        <a href="/Works/WorkTimesCreate?id=@ViewBag.WorkId "><i class="fa fa-plus"></i>新增</a>
        <a href="#"id="refresh"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>      
    </div>
</div>
<div class="card p ">
    <div class="main-table mt">
        <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
            <thead>
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="t1"><label for="t1"></label>
                    </th>
                    <th>
                        序号
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OvettimeHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AheadMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BackMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LateMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveEarlyMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAheadToOvertime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsBackToOvertime)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            @{
                int index = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;
                    <tr>
                        <td class="checkbox-wrap"><input type="checkbox" id="item_@index"><label for="item_@index"></label></td>
                        <td>
                            @index
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OvettimeHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AheadMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BackMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LateMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveEarlyMinutes)
                        </td>
                        <td class="checkbox-wrap">
                            @if (item.IsAheadToOvertime)
                            {
                                <input type="checkbox" id="Ia_@index" disabled="disabled" checked="checked"><label for="Ia_@index"></label>
                            }
                            else
                            {
                                <input type="checkbox" id="Ia_@index" disabled="disabled"><label for="Ia_@index"></label>

                            }
                        </td>

                        <td class="checkbox-wrap">
                            @if (item.IsBackToOvertime)
                            {
                                <input type="checkbox" id="IB_@index" disabled="disabled" checked="checked"><label for="IB_@index"></label>
                            }
                            else
                            {
                                <input type="checkbox" id="IB_@index" disabled="disabled"><label for="IB_@index"></label>

                            }
                        </td>
                        <td>
                            @*&id2=@ViewBag.WorkId*@
                        <a href="/Works/WorkTimesEdit?id=@item.Id" class="icon fa fa-edit bgc-blue-500"></a>
                        <a href="/Works/WorkTimesDelete?id=@item.Id" class="icon fa fa-trash bgc-red-500"></a>
                    </td>
                    @*<td>
                        @Html.ActionLink("编辑", "WorkTimesEdit", new { id = item.Id }) |
                        @Html.ActionLink("删除", "WorkTimesDelete", new { id = item.Id })
                    </td>*@
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<script>
    $("#refresh").click(function () {
        window.location.reload();
    })
</script>