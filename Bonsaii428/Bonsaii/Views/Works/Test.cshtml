}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>

<script>
    $(document).ready(function () {
        $("#AutoWorkHours").attr("readOnly", "readOnly");
        $("#IsAutoWork").change(function () {
            if ($("#IsAutoWork").is(":checked")) {
                $("#AutoWorkHours").removeAttr("readOnly");
            }
            else {
                $("#AutoWorkHours").attr("readOnly", "readOnly");
            }
        });

    });



</script>


