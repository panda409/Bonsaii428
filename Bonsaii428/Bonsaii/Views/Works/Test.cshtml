<!-- Page-Level Scripts -->
<script>
    $(document).ready(function () {
        $.jgrid.defaults.styleUI = "Bootstrap";

        $("#table_list_2").jqGrid({
        //    url: "/Test/GetRows",
      //      editurl: "/Test/AddRow",
            //     data: a,
            datatype: "json",
            mtype: "post",
            height: 450,
            autowidth: true,
            shrinkToFit: true,
            rowNum: 20,
            rowList: [10, 20, 30],
            colNames: ["序号", "上班时间", "下班时间", "正班时数", "加班时数", "提前分钟", "推后分钟", "迟到分钟", "早退分钟", "提前计加班", "推迟计加班"],
            colModel: [{
                name: "id",
                index: "id",
                editable: true,
                width: 60,
                sorttype: "int",
                search: true
            },
            {
                name: "starttime",
                index: "invdate",
                editable: true,
                width: 90,
                sorttype: "date",
                formatter: "date"
            },
            {
                name: "endtime",
                index: "name",
                editable: true,
                width: 100
            },
            {
                name: "hours",
                index: "amount",
                editable: true,
                width: 80,
                align: "right",
                sorttype: "float",
                formatter: "number"
            },
            {
                name: "extrahours",
                index: "tax",
                editable: true,
                width: 80,
                align: "right",
                sorttype: "float"
            },
            {
                name: "aheadminiutes",
                index: "total",
                editable: true,
                width: 80,
                align: "right",
                sorttype: "float"
            },
                             {
                                 name: "moveminiutes",
                                 index: "id",
                                 editable: true,
                                 width: 60,
                                 sorttype: "int",
                                 search: true
                             },

            {
                name: "lateminutes",
                index: "id",
                editable: true,
                width: 60,
                sorttype: "int",
                search: true
            },
            {
                name: "leaveearly",
                index: "id",
                editable: true,
                width: 60,
                sorttype: "int",
                search: true
            },
            {
                name: "aheadtoovertime",
                index: "id",
                editable: true,
                width: 60,
                sorttype: "int",
                search: true
            },
{
    name: "latetoovertime",
    index: "note",
    editable: true,
    width: 100,
    sortable: false
}],

            postData: {
                test: "Helo"
            },
            pager: "#pager_list_2",
            viewrecords: true,
            caption: "员工技能管理",
            add: true,
            edit: true,
            addtext: "Add",
            edittext: "Edit",
            hidegrid: false
        });
        $("#table_list_2").setSelection(4, true);
        /**
        jqGrid的Navigator的配置文件的格式为：
        jQuery("#grid_id").jqGrid('navGrid','#gridpager',{parameters},prmEdit, prmAdd, prmDel, prmSearch, prmView);

        */
        $("#table_list_2").jqGrid("navGrid", "#pager_list_2", {
            edit: true,
            //     add: true,

            search: true,
            //添加addfunc的话，则不会调用默认的add的对话框形式的函数，而是调用自己定义的函数形式
            addfunc: openAdding,
            delfunc: delRecord,
        },

        {
            height: 200,
            reloadAfterSubmit: true
        });
        $(window).bind("resize",
        function () {
            var b = $(".jqGrid_wrapper").width();
            $("#table_list_1").setGridWidth(b);
            $("#table_list_2").setGridWidth(b)
        })
    });


    function openAdding() {
        $("#table_list_2").jqGrid("editGridRow", "new", {
            addCaption: "俺就是个测试而已",
            url: "/Test/TestAdd",
            //定义需要额外发送到服务器端的数据
            editData: {
                WorkId: 1,
                name: "helo"
            },
        });
    }
    //删除函数，delfunc会把选择的删除行的行id作为参数传递到该函数中
    function delRecord(e) {
        $("#table_list_2").jqGrid("delGridRow", e, {
            url: "/Test/DeleteRow",
        });
    }


</script>