                        @*<a href="/StaffParamTypes/Edit?id=@item.Id" class="icon fa fa-edit bgc-blue-500" title="编辑"></a>*@
                        <a href="/StaffParamTypes/ParamsIndex?id=@item.Id" title="查看参数详情" class="icon fa fa-edit bgc-blue-500"></a>
                        @*<a href="/StaffParamTypes/Delete?id=@item.Id" class="icon fa fa-trash bgc-red-500" title="删除"></a>*@
                    </td>
                </tr>
            }
        </table>
    </div>

    @{
        int num = Model.Count();
    }
</div>


<script>

    $("#add").click(function () {
        window.location.href = "/StaffParamTypes/Create"
    });

    $("#refresh").click(function () {
        window.location.reload();
    });

    $("#rootcheckbox").change(
        function () {
            if ($('#rootcheckbox').is(":checked")) {
                $('.brancheckbox').prop('checked', true);
            }

            else
                // $('.brancheckbox').attr("checked",false);//
                $('.brancheckbox').removeAttr("checked");
        }
        );

    $(".Id").click(function () {
        attr("yes");

    }
    );
</script>

