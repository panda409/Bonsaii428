@model Bonsaii.Models.Audit.AuditProcess

@{
    ViewBag.Title = "签核进度明细";
}
<script src="~/Scripts/UI/lib/jquery/jquery.min.js"></script>
<div class="content">
    <!-- 主内容开始 -->
    <div class="control-bar card bor-b">
        <ul class="breadcrumb pull-left pv">
            <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
            <li><a href="#">电子签核</a></li>
            <li><a href="#">@ViewBag.Title</a></li>
        </ul>
        <div class="h-list pull-right pv">
            @if (Model.Result == 0)
            {
                <a href="/AuditProcess/StepCheck/@Model.Id"><i class="fa fa-hand-o-up"></i>审批</a>
            }
            <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
            <a href="/AuditProcess/Index"><i class="fa fa-backward"></i>返回</a>
        </div>
    </div>
</div>
<div class="card panel-box">
    <h4 class="title">@ViewBag.Title</h4>

    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Info)
            </dt>
            @foreach (var item in ViewBag.sInfoArray)
            {
                <dd>
                    @item
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AuditDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AuditDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ResultDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ResultDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>
       
            <dt>
                @Html.DisplayNameFor(model => model.AuditPerson)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AuditPerson)
            </dd>
            <dd>
                <a href="/AuditProcess/StepCheck/@Model.Id">
                    <input type="submit" value="审批" class="btn btn-primary" />
                </a>
            <button type="button" class="btn btn-outline" onclick="tz()">取消</button>
            </dd>
        </dl>
    </div>
    </div>
    <script>
        $("#info")

    </script>
    <script>
    $("#refresh").click(function () {
        window.location.reload();
    })
    function tz() {
        window.location.href = "/AuditProcess/Index";
    }
    </script>
