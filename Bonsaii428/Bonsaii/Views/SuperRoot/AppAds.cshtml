<!DOCTYPE html>
@{
    ViewBag.Title = "AppAds";
    Layout = "~/Views/Shared/_LayoutMainSuperRoot.cshtml";
}
@*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>*@
<script src="~/Scripts/uploadify/jquery.uploadify.min.js"></script>
<link href="~/Scripts/uploadify/uploadify.css" rel="stylesheet" />
<style>
    #appAdsPicture {
        height:80%;
    }
    .adsImg {
        width: 30%;
        margin-left: 40px;
    }
    .pic-div{
        width:27%;
      
        float:left;
    }
</style>
<h2>APP广告管理</h2>

<div id="appAdsPicture">

    <div class="pic-div">
        <form>
            <div id="queue1"></div>
            <input id="file_upload1" name="file_upload1" class="file_upload" type="file" multiple="multiple" value="one"/>
        </form>
        <img class="adsImg" id="picone" src="~/Scripts/img/one.jpg" />
    </div>
    <div class="pic-div">
        <form>
            <div id="queue2"></div>
            <input id="file_upload2" name="file_upload2" class="file_upload" type="file" multiple="multiple" value="two"/>
        </form>
        <img class="adsImg" id="pictwo" src="~/Scripts/img/two.jpg" />
    </div>
    <div class="pic-div">
        <form>
            <div id="queue3"></div>
            <input id="file_upload3" name="file_upload3" class="file_upload" type="file" multiple="multiple" value="three"/>
        </form>
        <img class="adsImg" id="picthree" src="~/Scripts/img/three.jpg" />
    </div>
    <div style="clear:both"></div>

</div>

<script type="text/javascript">
    $(document).ready(function () {

        $(".file_upload").each(function () {
            var id = "#" + $(this).attr("id");
            var name = $(this).attr("value");
            $(id).uploadify({
                    'buttonText': '更换广告',
                    'fileTypeExts': '*.jpg',
                    'formData': { 'imgName': name },
                    'swf': '../Scripts/uploadify/uploadify.swf',
                    'uploader': '/SuperRoot/UploadPic',
                    'onUploadSuccess': function (file, data, response) {
                        var picId = "#pic" + name;
                        var filePath = "../Scripts/img/" + name + ".jpg?t=" + Math.random();
                        $(picId).attr("src", filePath);
             //           window.location.reload();
                    }
            });
        });
    });
</script>

