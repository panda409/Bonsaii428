@model IEnumerable<Bonsaii.Models.TrainStartViewModel>

@{
    ViewBag.Title = "培训发起主页";
}
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">办公管理</a></li>
        <li><a href="/TrainStart/Index">@ViewBag.Title</a></li>
    </ul>
    <div class="h-list pull-right pv">
        <a href="/TrainStart/Create"><i class="fa fa-plus"></i>新增</a>
        <a href="#"id="refresh"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>
    </div>
</div>
<div class="card p ">
    <div class="main-table mt">
        <table class="table table-striped table-hover table-bordered display
" id="example" cellspacing="0">
            <thead>
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="t1"><label for="t1"></label>
                    </th>
                    <th>
                        序号
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BillTypeNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BillTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BillNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TellNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuditStatusName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    @foreach (var temp in @ViewBag.fieldNameList)
                    {
                        <th>
                            @Html.DisplayName((string)temp.Description)
                        </th>

                    }
                    <th>操作</th>
                </tr>
            </thead>
            @{
                int index = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;
                    <tr>
                        <td class="checkbox-wrap"><input type="checkbox" id="item_@index"><label for="item_@index"></label></td>
                        <td>
                            @index
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BillTypeNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BillTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BillNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrainType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrainCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TellNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuditStatusName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        @foreach (var temp in @ViewBag.fieldValueList)
                        {
                            if (temp.Id == item.Id)
                            {
                                <td>
                                    @temp.Value
                                </td>
                            }
                        }
                        <td>
                            <a href="/TrainStart/Details/@item.Id" title="详情" class="icon fa fa-search bgc-blue-500"></a>
                            <a href="/TrainStart/Edit/@item.Id" title="编辑" class="icon fa fa-edit bgc-blue-500"></a>
                            <a href="/TrainStart/Delete/@item.Id" title="删除" class="icon fa fa-trash bgc-red-500"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
  $("#refresh").click(function () {
        window.location.reload();
  });
</script>