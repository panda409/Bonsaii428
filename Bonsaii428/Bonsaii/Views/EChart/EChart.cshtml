        function Rendermain() {
            // 基于准备好的dom，初始化echarts实例
            var myChart = echarts.init(document.getElementById('main'));
            // 指定图表的配置项和数据
            myChart.setOption({
                
                title: {
                    text: "部门人数柱状图"
                },
                tooltip: {},
                legend: {

                },
                xAxis: {
                    data: []//["衬衫","羊毛衫","雪纺衫","裤子","高跟鞋","袜子"]
                },
                yAxis: {},
                series: [{
                    name: '销量',
                    type: 'bar',
                    data: []//[5, 20, 36, 10, 10, 20]
                }]
            });
            $.ajax({
                url: "/EChart/GetDepartmentStaffs",
                type: "POST",
                success: function (data) {
                    // 使用刚指定的配置项和数据显示图表
                    myChart.setOption({
                        xAxis: {
                            data: data.dptNames
                        },
                        series: [{
                            name: "人数",
                            data: data.stfCount,
                        }]
                    });
              //      myChart.setOption(option);
                },
                error: function (data) {
                    alert("AJAX get echart data error!");
                }
            });
        }

        function Rendermain2() {
            var myChart = echarts.init(document.getElementById('main2'));
            // 指定图表的配置项和数据
            myChart.setOption({
                title: {
                    text: '员工学历分布',
                    x: 'center'
                },
                tooltip: {
                    trigger: 'item',
                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                },
                legend: {
                    orient: 'vertical',
                    left: 'left',
                  
                },
                series: [
                    {
                        name: '学历',
                        type: 'pie',
                        radius: '55%',
                        center: ['50%', '60%'],

                        itemStyle: {
                            emphasis: {
                                shadowBlur: 10,
                                shadowOffsetX: 0,
                                shadowColor: 'rgba(0, 0, 0, 0.5)'
                            }
                        }
                    }
                ]
            });
            $.ajax({
                url: "/EChart/GetStaffEducation",
                type: "POST",
                success: function (data) {
                    // 使用刚指定的配置项和数据显示图表
                    myChart.setOption({
                        legend: {
                            data: data.eduNames
                        },
                        series: [{
                            data: data.eduStaffs
                        }]
                    });
                },
                error: function (data) {
                    alert("AJAX get echart data error!");
                }
            });
        }

