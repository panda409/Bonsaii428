@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <!-- 引入 echarts.js -->
    <script src="~/Scripts/echart/echarts.min.js"></script>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="width: 600px;height:400px;"></div>
    <div id="main2" style="width:600px;height:400px;"></div>
    <script type="text/javascript">
        //渲染main的柱状图
        function Rendermain() {
            // 基于准备好的dom，初始化echarts实例
            var myChart = echarts.init(document.getElementById('main'));
            // 指定图表的配置项和数据
            myChart.setOption({
                title: {
                    text: "部门人数柱状图"
                },
                tooltip: {},
                legend: {
                    data: ['部门人数']
                },
                xAxis: {
                    data: []//["衬衫","羊毛衫","雪纺衫","裤子","高跟鞋","袜子"]
                },
                yAxis: {},
                series: [{
                    name: '销量',
                    type: 'bar',
                    data: []//[5, 20, 36, 10, 10, 20]
                }]
            });
            $.ajax({
                url: "/EChart/GetDepartmentStaffs",
                type: "POST",
                success: function (data) {
                    // 使用刚指定的配置项和数据显示图表
                    myChart.setOption({
                        xAxis: {
                            data: data.dptNames
                        },
                        series: [{
                            name: "人数",
                            data: data.stfCount,
                        }]
                    });
                    myChart.setOption(option);
                },
                error: function (data) {
                    alert("AJAX get echart data error!");
                }
            });
        }
        
        function Rendermain2() {
            var myChart = echarts.init(document.getElementById('main2'));
            // 指定图表的配置项和数据
            myChart.setOption({
                backgroundColor: '#2c343c',

                title: {
                    text: 'Customized Pie',
                    left: 'center',
                    top: 20,
                    textStyle: {
                        color: '#ccc'
                    }
                },

                tooltip: {
                    trigger: 'item',
                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                },

                visualMap: {
                    show: false,
                    min: 80,
                    max: 600,
                    inRange: {
                        colorLightness: [0, 1]
                    }
                },
                series: [
                    {
                        name: '访问来源',
                        type: 'pie',
                        radius: '55%',
                        center: ['50%', '50%'],
                        data: [
                            { value: 335, name: '直接访问' },
                            { value: 310, name: '邮件营销' },
                            { value: 274, name: '联盟广告' },
                            { value: 235, name: '视频广告' },
                            { value: 400, name: '搜索引擎' }
                        ].sort(function (a, b) { return a.value - b.value }),
                        roseType: 'angle',
                        label: {
                            normal: {
                                textStyle: {
                                    color: 'rgba(255, 255, 255, 0.3)'
                                }
                            }
                        },
                        labelLine: {
                            normal: {
                                lineStyle: {
                                    color: 'rgba(255, 255, 255, 0.3)'
                                },
                                smooth: 0.2,
                                length: 10,
                                length2: 20
                            }
                        },
                        itemStyle: {
                            normal: {
                                color: '#c23531',
                                shadowBlur: 200,
                                shadowColor: 'rgba(0, 0, 0, 0.5)'
                            }
                        }
                    }
                ]
            });
        }
     
    
        $(document).ready(function () {
            Rendermain();
            Rendermain2();
        })
    </script>
</body>
</html>
