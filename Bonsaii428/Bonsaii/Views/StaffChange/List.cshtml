@model IEnumerable<Bonsaii.Models.StaffChange>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("创建变更单", "Create")
    @Html.ActionLink("返回", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BillTypeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EffectiveDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuditStatus)
        </th>
        </th>
        @* (变化的字段） *@
        @foreach (var temp in @ViewBag.recordList)
        {
            <th>
                @Html.DisplayName((string)temp.Description)
            </th>
        }
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BillTypeNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EffectiveDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuditStatus)
        </td>
        @*(显示变化的字段） *@
        @foreach (var temp in @ViewBag.List)
        {
            if (temp.Id == item.Id)
            {
                <th>
                    @temp.Value
                </th>
            }
        }
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("查看", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })|@Html.ActionLink("查看变更信息", "Look", new { id = item.StaffNumber })
        </td>
       
    </tr>
}

</table>
