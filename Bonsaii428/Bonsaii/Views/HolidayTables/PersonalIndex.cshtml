@model IEnumerable<Bonsaii.Models.HolidayTableViewModel>

@{
    ViewBag.Title = "个人假日表";
}
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="/Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">设置假日表</a></li>
        <li><a href="#">个人假日表</a></li>
        <li><a href="/HolidayTables/PersonalCreate">设定个人假日</a></li>
    </ul>
    <div class="h-list pull-right pv">
        <a href="/HolidayTables/PersonalCreate"><i class="fa fa-plus"></i>新增</a>
        <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>
    </div>
</div>
<div class="card p ">
    <div class="main-table mt">
        <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StaffNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StaffName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
            </tr>
                </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>