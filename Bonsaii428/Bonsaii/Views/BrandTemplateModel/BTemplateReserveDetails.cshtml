@model Bonsaii.Models.BrandTemplateReserve
@{
    ViewBag.Title = "模板字段详情";
}

<script src="~/Scripts/UI/lib/jquery/jquery.min.js"></script>
@using (Html.BeginForm())//"BTemplateReserveDelete", "BrandTemplateModel", FormMethod.Get, new {id1=@Model.Id,id2=@ViewBag.TemplateId}
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="BrandTemplateId" id="BrandTemplateId" value="@ViewBag.TemplateId" />
    <div class="content">
        <!-- 主内容开始 -->
        <div class="control-bar card bor-b">
            <ul class="breadcrumb pull-left pv">
                <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
                <li><a href="#">组织结构</a></li>
                <li><a href="#">@ViewBag.Title</a></li>
            </ul>
            <div class="h-list pull-right pv">
                <a href="/BrandTemplateModel/BTemplateReserveEdit?id1=@Model.Id&id2=@ViewBag.TemplateId"><i class="fa fa-remove"></i>编辑</a>
                <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
                <a href="/BrandTemplateModel/BTemplateReserveIndex/@ViewBag.TemplateId"><i class="fa fa-backward"></i>返回</a>

            </div>
        </div>
    </div>
    <div>
        <div class="card panel-box">
            <h4 class="title">@ViewBag.Title</h4>
            <dl class="dl-horizontal">
                <dt>
                    模板字段
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FieldDescription)
                </dd>
                <dd>
                    <a href="/BrandTemplateModel/BTemplateReserveEdit?id1=@Model.Id&id2=@ViewBag.TemplateId"><input type="button" value="编辑" class="btn btn-primary" /></a> <button type="button" class="btn btn-outline" onclick="tz()">取消</button>
                </dd>


            </dl>
        </div>
    </div>
}
    <script>
        $("#refresh").click(function () {
            window.location.reload();
        })
        function tz() {
            window.location.href = "/BrandTemplateModel/BTemplateReserveIndex";
        }
    </script>
