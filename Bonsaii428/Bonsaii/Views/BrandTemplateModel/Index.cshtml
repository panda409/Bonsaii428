@model IEnumerable<Bonsaii.Models.BrandTemplateModels>

@{
    ViewBag.Title = "厂牌模板";
}
<script src="~/Scripts/UI/lib/jquery/jquery.min.js"></script>
<div class="content">
    <!-- 主内容开始 -->
    <div class="control-bar card bor-b">
        <ul class="breadcrumb pull-left pv">
            <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
            <li><a href="#">系统设置</a></li>
            <li><a href="#">@ViewBag.Title</a></li>
        </ul>
        <div class="h-list pull-right pv">
            <a href="#" id="add"><i class="fa fa-plus"></i>新增</a>
            <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
            <a href="#"><i class="fa fa-print"></i>输出</a>
        </div>
    </div>


    <div class="card panel-box">
        <div class="table-header">
            <ul class="h-forms pull-left">
                <li>每页显示</li>
                <li><input type="text" class="form-control short"></li>
                <li>条</li>
            </ul>
            <ul class="h-forms pull-right">
                <li><input type="text" class="form-control"></li>
                <li><button class="btn btn-primary"><i class="fa fa-search"></i>搜索</button></li>
            </ul>

        </div>
        <div class="main-table mt">
            <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="item_0"><label for="item_0"></label>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>操作</th>
                </tr>
                @{
                    int index = 0;
                }

                @foreach (var item in Model)
                {

                    index = index + 1;
                    <tr>
                        <td class="checkbox-wrap">
                            <input type="checkbox" id="item_@index"><label for="item_@index"></label>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a href="/BrandTemplateModel/Details/@item.Id" class="icon fa fa-search bgc-blue-500" title="详情"></a>
                            <a href="/BrandTemplateModel/Edit/@item.Id" class="icon fa fa-edit bgc-blue-500" title="编辑"></a>
                            <a href="/BrandTemplateModel/Delete/@item.Id" class="icon fa fa-trash bgc-red-500" title="删除"></a>
                             <a href="/BrandTemplateModel/BrandIndex/@item.Id" class="icon fa fa-print bgc-red-500" title="打印"></a>

                            @Html.ActionLink("自定义厂牌字段", "BTemplateReserveIndex", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>



    </div>
</div>
<script>
    $("#add").click(function () {
        window.location.href = "/BrandTemplateModel/Create"
    });
    $("#refresh").click(function () {
        window.location.reload();
    });
</script>
