@model IEnumerable<Bonsaii.Models.Audit.AuditApplication>

@{
    ViewBag.Title = "签核记录明细";
}
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">电子签核</a></li>
        <li><a href="/AuditApplication/Index"></a>签核记录明细</li>
    </ul>
    <div class="h-list pull-right pv">
        @*<a href="/AuditApplication/Create"><i class="fa fa-plus"></i>新增</a>*@
        <a href="#"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>
    </div>
</div>
<div class="card p ">
    <div class="main-table mt">
        <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
            <thead>
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="t1"><label for="t1"></label>
                    </th>
                    <th>
                        序号
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            @{
                int index = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;
                    <tr>
                        <td class="checkbox-wrap"><input type="checkbox" id="item_@index"><label for="item_@index"></label></td>
                        <td>
                            @index
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StateDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>


                            @if (item.State == 3 || item.State == 4)
                            {
                                <a href="/AuditApplication/Details/@item.Id" class="icon fa fa-search bgc-blue-500"></a>
                                <a href="/AuditApplication/Delete/@item.Id" class="icon fa fa-trash bgc-grey-500"></a>
                            }
                            else
                            {
                                <a href="/AuditApplication/Details/@item.Id" class="icon fa fa-search bgc-blue-500"></a>
                                <a href="/AuditApplication/Delete/@item.Id" class="icon fa fa-trash bgc-red-500"></a>
                            }
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
