@model IEnumerable<Bonsaii.Models.Checking_in.MonthSignInViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<script>
    $("#refresh").click(function () {
        window.location.reload();
    });
</script>
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="/Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="#">考勤管理</a></li>
        <li><a href="/MonthSignIndates/Index">考勤月报表</a></li>
    </ul>
    <div class="h-list pull-right pv">

        <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
        <a href="#"><i class="fa fa-print"></i>输出</a>
    </div>
</div>
<div class="card p ">
    <div class="main-table mt">
        <table class="table table-striped table-hover table-bordered display" id="example" cellspacing="0">
            <thead>
                <tr>
                    <th class="checkbox-wrap">
                        <input type="checkbox" id="t1"><label for="t1"></label>
                    </th>
                    <th>
                        序号
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShowDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NormalWorkHours)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.NormalWorkDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OvertimeApplyHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NormalOvertimeHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HolidayOvertimeHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OtherOvertimeHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalOvertimeHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ComeLateMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ComeLateTimes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveEarlyMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveEarlyTimes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AbsentHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AbsentTimes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HolidayDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VacateHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VacateDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VacateTimes)
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            @{
                int index = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;
                    <tr>
                        <td class="checkbox-wrap"><input type="checkbox" id="item_@index"><label for="item_@index"></label></td>
                        <td>
                            @index
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShowDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.NormalWorkHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NormalWorkDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OvertimeApplyHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NormalOvertimeHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HolidayOvertimeHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OtherOvertimeHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalOvertimeHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComeLateMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComeLateTimes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveEarlyMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveEarlyTimes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AbsentHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AbsentTimes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HolidayDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VacateHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VacateDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VacateTimes)
                        </td>

                        <td>
                            <a href="/EveryDaySignInDates/Details/@item.Id" class="icon fa fa-search bgc-blue-500"></a>
                            @*<a href="/EveryDaySignInDates/Edit/@item.Id" class="icon fa fa-edit bgc-blue-500"></a>
                            <a href="/EveryDaySignInDates/Delete/@item.Id" class="icon fa fa-trash bgc-red-500"></a>*@
                        </td>
                    </tr>
                }
        </table>

    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    });
</script>