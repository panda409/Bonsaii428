@model BonsaiiModels.SystemMessage

@{
    ViewBag.Title = "消息详情";
}

<div class="content">
    <!-- 主内容开始 -->
    <div class="control-bar card bor-b">
        <ul class="breadcrumb pull-left pv">
            <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
            <li><a href="#">消息详情</a></li>
        </ul>
        <div class="h-list pull-right pv">
            <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
            <a href="/SystemMessage/Index"><i class="fa fa-backward"></i>返回</a>
        </div>
    </div>
</div>
<div class="card panel-box">
    <h4 class="title">@Html.DisplayFor(model => model.MessTitle)</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                <label>代办事项</label>
            </dt>
              @if (Model.SendStatus == 1) {
                <dd>
                   <lable>发送成功！</lable>
                </dd>
              }
              else
              {
                <dd>
                    <lable>发送失败！</lable>
                </dd>
              }
            <dt>
                @Html.DisplayNameFor(model => model.MessBody)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MessBody)
            </dd>
        </dl>
    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    })
    function tz() {
        window.location.href = "/SystemMessage/Index";
    }
</script>