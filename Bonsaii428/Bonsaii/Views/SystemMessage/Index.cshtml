@model IEnumerable<BonsaiiModels.SystemMessage>

@{
    ViewBag.Title = "系统消息";
}
<script src="~/Scripts/UI/lib/jquery/jquery.min.js"></script>
<div class="control-bar card bor-b">
    <ul class="breadcrumb pull-left pv">
        <li><a href="Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
        <li><a href="/SystemMessage/Index">@ViewBag.Title</a></li>
    </ul>
    <div class="h-list pull-right pv">
        <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="card p ">
        <div class="main-table mt">
            <div class="col-md-offset-5 ">
                <div class="col-md-2 ">
                   <label class="control-label ">
                       @Html.DisplayFor(modelItem => item.MessTime)
                    </label>
                </div>
                <div>

                </div>
            </div>
            <table class="table table-striped table-hover  display" id="example" cellspacing="0">
                         
                <tbody >
                    <tr id="hah">
                        <td >
                            @if (item.IsRead == false)
                            {
                                <a href="/SystemMessage/Details/@item.Id" class="icon fa fa-envelope bgc-red-200"></a>
                            }
                            else
                            {
                                <a href="/SystemMessage/Details/@item.Id" class="icon fa fa-envelope bgc-blue-100"></a>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessTitle)
                        </td>
                        @*<td>*@
                            @*@Html.DisplayFor(modelItem => item.IsRead)*@
                            @*@if (item.IsRead == false)
                            {
                            <a href="#" class="icon fa fa-envelope bgc-orange-500"></a>
                            }
                            else
                            {
                            <a href="#" class="icon fa fa-envelope bgc-blue-500"></a>
                            }*@
                        @*</td>*@
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                            @Html.ActionLink("详情", "Details", new { id = item.Id }) |
                            @Html.ActionLink("删除", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    });
    $("hah").click(function () {
        window.location.href("/SystemMessage/Details");
    });
</script>


