        </div>

        @*<textarea id="recruit" name="recruit" value="@Model.PublishVersion"></textarea>*@
        <div style="width:80%">
            @Html.HiddenFor(model => model.Id)

            <script id="container" name="content" type="text/plain">
            </script>
            <!-- 配置文件 -->
            <!-- 实例化编辑器 -->
            <script type="text/javascript">
                var ue = UE.getEditor('container', {
                    initialFrameHeight: 640
                });
            </script>

            <input type="submit" value="发布" class="btn btn-primary" style="margin-top:30px;margin-left:50%;" />
            <button type="button" class="btn btn-outline" style="margin-top:30px;" onclick="tz()">取消</button>
        </div>

    </div>}
<script>
    $("#refresh").click(function () {
        window.location.reload();
    })
    function tz() {
        window.location.href = "/Recruitments/PublishRecruitments";
    }
</script>
