@model IEnumerable<Bonsaii.Models.DataControl>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.dec</h2>
<p>
    @Html.ActionLink("新建字段", "Create", new { tablename = @ViewBag.tablename })
</p>
@Html.ActionLink("返回", "Index")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TableName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TableColumn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @ViewBag.dec
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
