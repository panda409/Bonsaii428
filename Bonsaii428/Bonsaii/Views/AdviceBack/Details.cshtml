            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RecordTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RecordTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ChangeTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ChangeTime)
            </dd>

        </dl>
    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    })
    function tz() {
        window.location.href = "/AdviceBack/Index";
    }
</script>
