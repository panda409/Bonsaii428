    //        $('#BillTypeNumber').bootstrapSelect({
    //            data: data,
    //            downBorder: true,
    //            multiple: false,//多选
    //        });
    //    }
    //});
    $.ajax({
        url: '/StaffArchive/StaffSearch',
        type: 'POST',
        success: function (data) {
            $('#StaffNumber').bootstrapSelect({
                data: data,
                downBorder: true,
                multiple: false,//多选
                onSelect: function (val, rec) {//得到选择的值
                    $.ajax({
                        url: "./StaffNumber",
                        type: 'POST',
                        data: { number: val },
                        success: (function (data) {
                          //  $("#StaffName").val(data[0].staffName);
                            $("#Department").val(data[0].departmentName);
                            $("#IdenticationNumber").val(data[0].identicationNumber);
                            $("#StaffName").val(data[0].name);
                            $("#BillTypeNumber").val(data[0].billTypeNumber);
                            $("#BillTypeName").val(data[0].billTypeName);
                            
                        }
                        )
                    })
                }
            })
        }
    });
    </script>

