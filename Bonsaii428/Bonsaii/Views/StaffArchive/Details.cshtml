            </dt>

            <dd>
                @Html.DisplayFor(model => model.BillNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StaffNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StaffNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StaffName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StaffName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LeaveDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LeaveDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReApplyDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReApplyDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Remark)
            </dt>

            <dd>
