                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Department)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Department)
            </dd>
            @foreach (var temp in @ViewBag.fieldValueList)
            {
                <dt>@Html.DisplayName((string)temp.Description)</dt>
                <dd>@temp.Value</dd>

            }
            <dt>


            </dt>

            <dd>
                <a href="/StaffArchive/Edit/@Model.Id"><input type="submit" value="编辑" class="btn btn-primary" /></a> <button type="button" class="btn btn-outline" onclick="tz()">取消</button>
            </dd>
        </dl>
    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    })
    function tz() {
        window.location.href = "/StaffArchive/Index";
    }
</script>