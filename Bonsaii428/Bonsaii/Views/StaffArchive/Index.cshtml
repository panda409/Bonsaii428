@model IEnumerable<Bonsaii.Models.StaffArchive>

@{
    ViewBag.Title = "离职档案管理";
}

<div class="content">
    <!-- 主内容开始 -->
    <div class="control-bar card bor-b">
        <ul class="breadcrumb pull-left pv">
            <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
            <li><a href="#">人事管理</a></li>
            <li><a href="#">@ViewBag.Title</a></li>
        </ul>
        <div class="h-list pull-right pv">
            @*<a href="#" id="add"><i class="fa fa-plus"></i>新增</a>*@
            <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
            <a href="#"><i class="fa fa-print"></i>输出</a>
        </div>
    </div>


    <div class="card p ">
    
        <div class="main-table mt">
            <table class="table table-striped table-hover table-bordered display
" id="example" cellspacing="0">
                <thead>
                    <tr>
                        <th class="checkbox-wrap">
                            <input type="checkbox" id="item_0"><label for="item_0"></label>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillTypeNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillTypeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StaffNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StaffName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LeaveDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReApplyDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Remark)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdenticationNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BlackList)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WorkPlus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tag)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        @*@foreach (var temp in @ViewBag.fieldNameList)
                    {
                        <th>
                            @Html.DisplayName((string)temp.Description)
                        </th>

                    }*@
                        <th>操作</th>
                    </tr>
                </thead>
                @{
                    int index = 0;
                }
                <tbody>
                    @foreach (var item in Model)
                    {

                        index = index + 1;
                        <tr>
                            <td class="checkbox-wrap">
                                <input type="checkbox" id="item_@index"><label for="item_@index"></label>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillTypeNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LeaveDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReApplyDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remark)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdenticationNumber)
                            </td>
                            <td class="checkbox-wrap">
                                @if (item.BlackList)
                                {
                                    <input type="checkbox" id="BlackList" disabled="disabled" checked="checked"><label for="BlackList"></label>
                                }
                                else
                                {
                                    <input type="checkbox" id="BlackList" disabled="disabled"><label for="BlackList"></label>

                                }


                            </td>
                            <td class="checkbox-wrap">
                                @if (item.WorkPlus)
                                {
                                    <input type="checkbox" id="WorkPlus" disabled="disabled" checked="checked"><label for="WorkPlus"></label>
                                }
                                else
                                {
                                    <input type="checkbox" id="WorkPlus" disabled="disabled"><label for="WorkPlus"></label>

                                }


                            </td>
                            <td class="checkbox-wrap">
                                @if (item.Tag)
                                {
                                    <input type="checkbox" id="Tag" disabled="disabled" checked="checked"><label for="Tag"></label>
                                }
                                else
                                {
                                    <input type="checkbox" id="Tag" disabled="disabled"><label for="Tag"></label>

                                }


                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            @*@foreach (var temp in @ViewBag.fieldValueList)
                        {
                            if (temp.Id == item.Id)
                            {
                                <td>
                                    @temp.Value
                                </td>
                            }
                        }*@
                            <td>
                                <a href="/StaffArchive/Details/@item.Id" class="icon fa fa-search bgc-blue-500" title="详情"></a>
                                <a href="/StaffArchive/Edit/@item.Id" class="icon fa fa-edit bgc-blue-500" title="编辑"></a>
                                <a href="/StaffArchive/Delete/@item.Id" class="icon fa fa-trash bgc-red-500" title="删除"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

         </div>
    </div>
</div>
<script>
    $("#refresh").click(function () {
        window.location.reload();
    });
</script>