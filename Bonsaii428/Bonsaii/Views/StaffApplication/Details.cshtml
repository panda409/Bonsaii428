@model Bonsaii.Models.StaffApplication

@{
    ViewBag.Title = "离职申请详情";
}
<script src="~/Scripts/UI/lib/jquery/jquery.min.js"></script>

@using (Html.BeginForm("Details", "StaffApplication", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

   
        <!-- 主内容开始 -->
        <div class="control-bar card bor-b">
            <ul class="breadcrumb pull-left pv">
                <li><a href="/Home/IndexMain"><i class="fa fa-home"></i>主页</a></li>
                <li><a href="#">离职申请</a></li>
                <li><a href="#">@ViewBag.Title</a></li>
            </ul>
            <div class="h-list pull-right pv">
                <a href="/StaffApplication/Edit/@Model.Id"><i class="fa fa-edit"></i>编辑</a>
                <a href="#" id="refresh"><i class="fa fa-refresh"></i>刷新</a>
                <a href="/StaffApplication/Index"><i class="fa fa-backward"></i>返回</a>
                @if (Model.AuditStatus == 6)
                {
                    <a href="/StaffApplication/ManualAudit?id=@Model.Id&flag=1" class="icon fa fa-hand-o-up bgc-blue-500" title="审核通过"></a>
                <a href="/StaffApplication/ManualAudit?id=@Model.Id&flag=0" class="icon fa fa-hand-stop-o bgc-red-500" title="审核不通过"></a>
                }
                @if (Model.AuditStatus == 6 || Model.AuditStatus == 0 || Model.AuditStatus == 4 || Model.AuditStatus == 7)
                 {
                         <a href="/StaffApplication/Submit?id=@Model.Id" class="icon fa fa-hand-o-up bgc-blue-500" title="重新提交"></a>
                    }
            </div>
        </div>

        <div class="card panel-box">
            <h4 class="title">@ViewBag.Title</h4>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.BillTypeNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BillTypeNumber)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.BillTypeName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BillTypeName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.BillNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BillNumber)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.StaffNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StaffNumber)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.StaffName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StaffName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ApplyDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApplyDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.HopeLeaveDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HopeLeaveDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LeaveType)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LeaveType)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LeaveReason)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LeaveReason)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Remark)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Remark)
                    <dt>
                        @Html.DisplayNameFor(model => model.AuditStatusName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AuditStatusName)
                    </dd>
                    @foreach (var temp in @ViewBag.fieldValueList)
            {
            <dt>@Html.DisplayName((string)temp.Description)</dt>
            <dd>@temp.Value</dd>
            }


                    <dt>


                    </dt>

                    <dd>
                        <a href="/StaffApplication/Edit/@Model.Id"><input type="submit" value="编辑" class="btn btn-primary" /></a> <button type="button" class="btn btn-outline" onclick="tz()">取消</button>
                    </dd>
                </dl>
            </div>
        </div>

  
}
<script>
    function tz() {
        window.location.href = "/StaffApplication/Index";
    }
</script>