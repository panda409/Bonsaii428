<script>
    $("#refresh").click(function () {
        window.location.reload();
    });
    $.ajax({
        url: '/StaffApplication/StaffSearch',
        type: 'POST',
        success: function (data) {

            $('#StaffNumber').bootstrapSelect({
                data: data,
                downBorder: true,
                multiple: false,//多选
                selected: true,
                onSelect: function (val, rec) {//得到选择的值
                    $.ajax({
                        url: "./StaffNumber",
                        type: 'POST',
                        data: { number: val },
                        success: (function (data) {
                         //   $("#StaffNumber").val(data[0].staffNumber);
                            $("#StaffName").val(data[0].staffName);
                        })
                    });
                }
            });
        }
    });
</script>
<script>
    var billSort = "23";
    $.ajax({
        url: '/Staff/BillTypeNumberSearch',
        type: 'POST',
        data: { billSort: billSort },
        success: function (data) {
            $('#BillTypeNumber').bootstrapSelect({
                data: data,
                downBorder: true,
                multiple: false,//多选
            });
        }
    });

    var leaveType = "离职类型";
      $.ajax({
                url: '/Staff/SimpleParamSearch',
                type: 'POST',
                data: { name: leaveType },
                success: function (data) {
                    $('#LeaveType').bootstrapSelect({
                        data: data,
                        downBorder: true,
                        multiple: false,//多选
                    });
                    for (var i = 0; i < data.length; i++) {
                        if (data[i].isDefault == true) {
                            $('#LeaveType').val(data[i].id);
                        }
                    }
                }
            });

</script>

