@model IEnumerable<Bonsaii.Models.StaffApplication>

@{
    ViewBag.Title = "List";
}

<h2>离职申请单列表</h2>

<p>
    @Html.ActionLink("返回","Index")

</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BillTypeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HopeLeaveDate)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.LeaveType)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.LeaveReason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
      
        <th>
            @Html.DisplayNameFor(model=>model.AuditStatus)
        </th>
        @* (变化的字段） *@
        @foreach (var temp in @ViewBag.recordList)
        {
            <th>
                @Html.DisplayName((string)temp.Description)
            </th>
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BillTypeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HopeLeaveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.LeaveType)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.LeaveReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem=>item.AuditStatus)
            </td>
            @*(显示变化的字段） *@
            @foreach (var temp in @ViewBag.List)
            {
                if (temp.Id == item.Id)
                {
                    <th>
                        @temp.Value
                    </th>
                }
            }
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                @Html.ActionLink("查看详情", "Details", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
